@page 
@model RecipeApplication.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurant</h1>

<form method="get">
    <div class="form-group"
        <div class="input-group-btn">
            <input type ="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button></button>
            </span>
        </div>
    </div>
</form>

      <table class="table">
    @foreach(var restaurant in Model.Restaurants)
            {
          <tr>
              <td>@restaurant.Name</td>
              <td>@restaurant.Location</td>
              <td>@restaurant.Cuisine</td>
              <td>
                  <button>
                      <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" />More Information
                  </button>
              </td>
              <td>
                  <button>
                      <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" />Edit
                  </button>
              </td>
          </tr>
            }
</table>

<a asp-page="./Edit" class="btn-lg">Add New</a>

@Model.Message 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
